<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fondoDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bordes_redondos"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/paddingGrande">

    <ImageButton
        android:id="@+id/btnCancelar"
        style="@style/ImageButtonSinFondo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:src="@drawable/cancelar"
        tools:ignore="contentDescription" />

    <ImageView
        android:id="@+id/imagenEnemigo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="@dimen/marginPequeno"
        android:scaleType="centerInside"
        tools:ignore="contentDescription" />

    <TextView
        android:id="@+id/textViewNombreEnemigo"
        style="@style/TextViewEncabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textViewNumBatalla"
        style="@style/TextViewNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/batalla"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnComenzarBatalla"
        style="@style/BotonesBordesRedondeadosPrimarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableStart="@drawable/batalla"
        android:text="@string/comenzar_batalla" />
</LinearLayout>