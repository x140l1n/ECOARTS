<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/bordes_redondos_rosado">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tierra_corazon"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/recuperar_vidas"
            style="@style/TextViewNormal" />
        <Button
            android:id="@+id/btnVolverMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volver_mapa"
            style="@style/BotonesBordesRedondeadosPrimarios"/>
    </LinearLayout>
</LinearLayout>