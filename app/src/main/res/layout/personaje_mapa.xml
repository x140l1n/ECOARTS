<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/nombreJugador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginPequeno"
        android:background="@drawable/bordes_redondos_rosado"
        android:gravity="center"
        android:padding="@dimen/paddingPequeno" />
    <ImageView
        android:id="@+id/personajeMapa"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerInside"
        tools:ignore="contentDescription"/>
    <Button
        android:id="@+id/btnJugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginPequeno"
        android:background="@drawable/bordes_redondos_primario"
        android:padding="@dimen/paddingPequeno"
        android:text="@string/jugar"/>
</LinearLayout>