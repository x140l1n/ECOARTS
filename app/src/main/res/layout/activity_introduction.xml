<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".introduction"
    android:background="@color/colorPrimario">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="336dp"
        android:layout_height="403dp"
        android:alpha="0.7"
        app:srcCompat="@drawable/enemigo_energia"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="297dp"
        android:layout_height="473dp"
        android:alpha="0.7"
        app:srcCompat="@drawable/enemigo_plastico"
        tools:layout_editor_absoluteX="-70dp"
        tools:layout_editor_absoluteY="424dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="@dimen/tamanyoPequenoMedianoTexto"
        android:padding="@dimen/paddingPequeno"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>