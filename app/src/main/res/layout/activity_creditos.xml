<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreditosActivity">

    <ImageView
        android:id="@+id/fondoGif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fondo_principal"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnVolver"
            style="@style/ImageButtonSinFondo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/volver"
            tools:ignore="contentDescription" />

        <TextView
            style="@style/TextViewEncabezado"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/creditos" />

        <TextView
            android:id="@+id/txtViewCreditos"
            style="@style/EditTextRosado"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="@string/creditos_cuerpo"
            android:textAlignment="center" />
    </LinearLayout>
</RelativeLayout>