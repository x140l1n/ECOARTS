<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bordes_redondos_modal_verde">
    <ImageButton
        android:id="@+id/btnCancelar"
        style="@style/ImageButtonSinFondo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:src="@drawable/cancelar"
        tools:ignore="contentDescription" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/paddingPequeno"
        android:layout_margin="@dimen/marginPequeno"
        android:background="@drawable/group_box">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/musica"
                android:textAlignment="viewEnd"
                style="@style/TextViewNormal"/>
            <SeekBar
                android:id="@+id/seekBadrMusica"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                style="@style/seekBar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/efectos"
                android:textAlignment="viewEnd"
                style="@style/TextViewNormal"/>
            <SeekBar
                android:id="@+id/seekBarEfectos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                style="@style/seekBar"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnAbandonarPartida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableStart="@drawable/salir"
        android:text="@string/Abandonar"
        style="@style/BotonesBordesRedondeadosPrimarios"/>
</LinearLayout>