<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">
    <ImageView
        android:id="@+id/fondoGif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo_principal"
        android:scaleType="fitXY"
        tools:ignore="contentDescription"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnVolver"
            android:layout_width="80dp"
            android:layout_height="80dp"
            style="@style/BotonAtras"
            tools:ignore="contentDescription"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/ajustes"
            style="@style/TextViewEncabezado"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="750dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp"
                android:background="@drawable/group_box">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/musica"
                        android:textAlignment="viewEnd"
                        style="@style/TextViewNormal"/>
                    <SeekBar
                        android:id="@+id/seekBadrMusica"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        style="@style/seekBar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/efectos"
                        android:textAlignment="viewEnd"
                        style="@style/TextViewNormal"/>
                    <SeekBar
                        android:id="@+id/seekBarEfectos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        style="@style/seekBar"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center">
                <Button
                    android:id="@+id/btnCambiarIdioma"
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cambiar_idioma"
                    style="@style/BotonesBordesRedondeadosPequeno"/>
                <Button
                    android:id="@+id/btnContactar"
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:text="@string/contactar"
                    style="@style/BotonesBordesRedondeadosPequeno"/>
                <Button
                    android:id="@+id/btnCreditos"
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:text="@string/creditos"
                    style="@style/BotonesBordesRedondeadosPequeno"/>

                <TextView
                    android:id="@+id/txtViewVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginArriba"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tamanyoPequenoTexto"
                    android:text="@string/version"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>