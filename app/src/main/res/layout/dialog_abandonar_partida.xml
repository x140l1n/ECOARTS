<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bordes_redondos_modal_verde">
    <TextView
        style="@style/TextViewModal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/abandonar_partida"
        android:textColor="@android:color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnAbandonar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/confirm2"
            tools:ignore="contentDescription"
            style="@style/ImageButtonSinFondo"/>
        <ImageButton
            android:id="@+id/btnCancelar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cancelar"
            tools:ignore="contentDescription"
            style="@style/ImageButtonSinFondo"/>
    </LinearLayout>
</LinearLayout>