<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/colorGrisOscuro"/>
            <size
                android:width="10dp"
                android:height="10dp"/>
            <corners
                android:radius="@dimen/radioPequeno"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item
                    android:top="2dp"
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp">
                    <shape>
                        <solid android:color="@color/colorVerde"/>
                        <corners android:radius="@dimen/radioPequeno"/>
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>