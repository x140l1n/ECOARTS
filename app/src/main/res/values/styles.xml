<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowFullscreen">true</item>

        <item name="android:radioButtonStyle">@style/RadioFuente</item>
        <item name="android:editTextStyle">@style/EditTextFuente</item>
        <item name="android:textViewStyle">@style/TextViewFuente</item>
        <item name="android:buttonStyle">@style/BotonFuente</item>
    </style>

    <style name="TextViewFuente" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/komika_hand</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BotonFuente" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/komika_hand</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="EditTextFuente" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/komika_hand</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="RadioFuente" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/komika_hand</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BotonesBordesRedondeadosSecundarios">
        <item name="android:background">@drawable/bordes_redondos_secundario</item>
        <item name="android:textSize">@dimen/tamanyoMedianoTexto</item>
        <item name="android:paddingLeft">@dimen/paddingIzquierda</item>
        <item name="android:paddingRight">@dimen/paddingDerecha</item>
        <item name="android:paddingTop">@dimen/paddingArriba</item>
        <item name="android:paddingBottom">@dimen/paddingAbajo</item>
        <item name="android:layout_margin">@dimen/marginMediano</item>
    </style>

    <style name="BotonesBordesRedondeadosPrimarios">
        <item name="android:background">@drawable/bordes_redondos_primario</item>
        <item name="android:textSize">@dimen/tamanyoMedianoTexto</item>
        <item name="android:paddingLeft">@dimen/paddingIzquierda</item>
        <item name="android:paddingRight">@dimen/paddingDerecha</item>
        <item name="android:paddingTop">@dimen/paddingArriba</item>
        <item name="android:paddingBottom">@dimen/paddingAbajo</item>
        <item name="android:layout_margin">@dimen/marginMediano</item>
    </style>

    <style name="BotonesBordesRedondeadosPequeno">
        <item name="android:background">@drawable/bordes_redondos_primario</item>
        <item name="android:textSize">@dimen/tamanyoMedianoTexto</item>
        <item name="android:paddingLeft">@dimen/paddingIzquierda</item>
        <item name="android:paddingRight">@dimen/paddingDerecha</item>
        <item name="android:paddingTop">@dimen/paddingArriba</item>
        <item name="android:paddingBottom">@dimen/paddingAbajo</item>
        <item name="android:layout_margin">@dimen/marginPequeno</item>
    </style>

    <style name="TextViewModal">
        <item name="android:textSize">@dimen/tamanyoMedianoGrandeTexto</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewEncabezado">
        <item name="android:textSize">@dimen/tamanyoGrandeTexto</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewPequeno">
        <item name="android:textSize">@dimen/tamanyoPequenoTexto</item>
        <item name="android:padding">@dimen/paddingPequeno</item>
        <item name="android:layout_margin">@dimen/marginPequeno</item>
    </style>

    <style name="TextViewNormal">
        <item name="android:textSize">@dimen/tamanyoMedianoTexto</item>
        <item name="android:layout_margin">@dimen/marginMediano</item>
    </style>

    <style name="NoAnimacionActivity" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="seekBar">
        <item name="android:thumb">@drawable/sol_thumb</item>
        <item name="android:splitTrack" tools:ignore="NewApi">false</item>
    </style>

    <style name="ImageButtonSinFondo">
        <item name="android:layout_margin">@dimen/marginPequeno</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="EditTextRosado">
        <item name="android:background">@drawable/bordes_redondos_rosado</item>
        <item name="android:textSize">@dimen/tamanyoMedianoTexto</item>
        <item name="android:paddingLeft">@dimen/paddingDerecha</item>
        <item name="android:paddingRight">@dimen/paddingIzquierda</item>
        <item name="android:paddingTop">@dimen/paddingArriba</item>
        <item name="android:paddingBottom">@dimen/paddingAbajo</item>
        <item name="android:layout_margin">@dimen/marginMediano</item>
        <item name="android:fontFamily">@font/komika_hand</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="RadioButton">
        <item name="android:textSize">@dimen/tamanyoMedianoTexto</item>
        <item name="android:layout_margin">@dimen/marginMediano</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@drawable/radio_button</item>
    </style>

    <style name="SmallProgressBar" parent="android:Widget.ProgressBar">
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">35dip</item>
    </style>
</resources>