<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="NoAnimacionActivity" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="fuenteKomikaHand" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/komika_hand</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BotonesBordesRedondeadosPrimarios" parent="fuenteKomikaHand">
        <item name="android:background">@drawable/bordes_redondos_primario</item>
        <item name="android:textSize">@dimen/tamanyoMedianoTexto</item>
        <item name="android:paddingLeft">@dimen/paddingIzquierda</item>
        <item name="android:paddingRight">@dimen/paddingDerecha</item>
        <item name="android:paddingTop">@dimen/paddingArriba</item>
        <item name="android:paddingBottom">@dimen/paddingAbajo</item>
        <item name="android:layout_margin">@dimen/marginMediano</item>
    </style>

    <style name="BotonesBordesRedondeadosSecundarios" parent="fuenteKomikaHand">
        <item name="android:background">@drawable/bordes_redondos_secundario</item>
        <item name="android:textSize">@dimen/tamanyoMedianoTexto</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/paddingIzquierda</item>
        <item name="android:paddingRight">@dimen/paddingDerecha</item>
        <item name="android:paddingTop">@dimen/paddingArriba</item>
        <item name="android:paddingBottom">@dimen/paddingAbajo</item>
        <item name="android:layout_marginLeft">@dimen/marginMediano</item>
        <item name="android:layout_marginRight">@dimen/marginMediano</item>
        <item name="android:layout_marginBottom">@dimen/marginMediano</item>
        <item name="android:layout_marginTop">@dimen/marginMediano</item>
    </style>

    <style name="BotonesBordesRedondeadosRespuesta" parent="fuenteKomikaHand">
        <item name="android:background">@drawable/bordes_redondos_secundario</item>
        <item name="android:fontFamily">@font/komika_hand</item>
        <item name="android:textSize">@dimen/tamanyoPequenoTexto</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/paddingIzquierda</item>
        <item name="android:paddingRight">@dimen/paddingDerecha</item>
        <item name="android:paddingTop">@dimen/paddingArriba</item>
        <item name="android:paddingBottom">@dimen/paddingAbajo</item>
        <item name="android:layout_margin">@dimen/marginPequeno</item>
    </style>

    <style name="BotonesBordesRedondeadosRespuestaIncorrecta" parent="fuenteKomikaHand">
        <item name="android:background">@drawable/bordes_redondos_rojo</item>
        <item name="android:textSize">@dimen/tamanyoPequenoTexto</item>
        <item name="android:fontFamily">@font/komika_hand</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/paddingIzquierda</item>
        <item name="android:paddingRight">@dimen/paddingDerecha</item>
        <item name="android:paddingTop">@dimen/paddingArriba</item>
        <item name="android:paddingBottom">@dimen/paddingAbajo</item>
        <item name="android:layout_margin">@dimen/marginPequeno</item>
    </style>

    <style name="BotonesBordesRedondeadosRespuestaCorrecta" parent="fuenteKomikaHand">
        <item name="android:background">@drawable/bordes_redondos_primario</item>
        <item name="android:textSize">@dimen/tamanyoPequenoTexto</item>
        <item name="android:fontFamily">@font/komika_hand</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">@dimen/paddingIzquierda</item>
        <item name="android:paddingRight">@dimen/paddingDerecha</item>
        <item name="android:paddingTop">@dimen/paddingArriba</item>
        <item name="android:paddingBottom">@dimen/paddingAbajo</item>
        <item name="android:layout_margin">@dimen/marginPequeno</item>
    </style>

    <style name="BotonesBordesRedondeadosMediano" parent="fuenteKomikaHand">
        <item name="android:background">@drawable/bordes_redondos_primario</item>
        <item name="android:textSize">@dimen/tamanyoMedianoTexto</item>
        <item name="android:paddingLeft">@dimen/paddingIzquierda</item>
        <item name="android:paddingRight">@dimen/paddingDerecha</item>
        <item name="android:paddingTop">@dimen/paddingArriba</item>
        <item name="android:paddingBottom">@dimen/paddingAbajo</item>
        <item name="android:layout_margin">@dimen/marginPequeno</item>
    </style>

    <style name="BotonesBordesRedondeadosPequeno" parent="fuenteKomikaHand">
        <item name="android:background">@drawable/bordes_redondos_primario</item>
        <item name="android:textSize">@dimen/tamanyoPequenoTexto</item>
        <item name="android:paddingLeft">@dimen/paddingPequeno</item>
        <item name="android:paddingRight">@dimen/paddingPequeno</item>
        <item name="android:paddingTop">@dimen/paddingPequeno</item>
        <item name="android:paddingBottom">@dimen/paddingPequeno</item>
    </style>

    <style name="TextViewModal" parent="fuenteKomikaHand">
        <item name="android:textSize">@dimen/tamanyoMedianoGrandeTexto</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/marginPequeno</item>
        <item name="android:layout_marginLeft">@dimen/marginPequeno</item>
        <item name="android:layout_marginRight">@dimen/marginPequeno</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="TextViewEncabezado" parent="fuenteKomikaHand">
        <item name="fontFamily">@font/komika_hand_bold</item>
        <item name="android:textSize">@dimen/tamanyoGrandeTexto</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewPequeno" parent="fuenteKomikaHand">
        <item name="android:textSize">@dimen/tamanyoPequenoTexto</item>
        <item name="android:padding">@dimen/paddingPequeno</item>
        <item name="android:layout_margin">@dimen/marginPequeno</item>
    </style>

    <style name="TextViewNormal" parent="fuenteKomikaHand">
        <item name="android:textSize">@dimen/tamanyoMedianoTexto</item>
        <item name="android:layout_margin">@dimen/marginMediano</item>
        <item name="android:padding">@dimen/paddingPequeno</item>
    </style>

    <style name="seekBar" parent="fuenteKomikaHand">
        <item name="android:thumb">@drawable/sol_thumb</item>
        <item name="android:splitTrack" tools:ignore="NewApi">false</item>
        <item name="android:layout_marginRight">@dimen/marginMediano</item>
    </style>

    <style name="ImageButtonSinFondo" parent="fuenteKomikaHand">
        <item name="android:layout_margin">@dimen/marginPequeno</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="EditTextRosado" parent="fuenteKomikaHand">
        <item name="android:background">@drawable/bordes_redondos_rosado</item>
        <item name="android:textSize">@dimen/tamanyoPequenoMedianoTexto</item>
        <item name="android:paddingLeft">@dimen/paddingDerecha</item>
        <item name="android:paddingRight">@dimen/paddingIzquierda</item>
        <item name="android:paddingTop">@dimen/paddingArriba</item>
        <item name="android:paddingBottom">@dimen/paddingAbajo</item>
        <item name="android:layout_margin">@dimen/marginMediano</item>
    </style>

    <style name="EditTextRosadoPequeno" parent="fuenteKomikaHand">
        <item name="android:background">@drawable/bordes_redondos_rosado</item>
        <item name="android:textSize">@dimen/tamanyoPequenoTexto</item>
        <item name="android:paddingLeft">@dimen/paddingMediano</item>
        <item name="android:paddingRight">@dimen/paddingMediano</item>
        <item name="android:paddingTop">@dimen/paddingPequeno</item>
        <item name="android:paddingBottom">@dimen/paddingPequeno</item>
    </style>

    <style name="RadioButton" parent="fuenteKomikaHand">
        <item name="android:textSize">@dimen/tamanyoMedianoTexto</item>
        <item name="android:layout_margin">@dimen/marginMediano</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@drawable/radio_button</item>
    </style>
</resources>